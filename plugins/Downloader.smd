// TIKTOK COMMAND
smd({
  cmdname: "tik",
  alias: ["tiktok", "tt"],
  desc: "Download TikTok video without watermark",
  type: "downloader",
  filename: __filename,
},
async (m) => {
  try {
    let text = m.body.split(" ").slice(1).join(" ").trim();
    if (!text && m.quoted?.body) text = m.quoted.body;
    if (!text || !text.includes("tiktok.com"))
      return m.reply("*ğŸŒ€ Provide a valid TikTok video URL!*\n\nExample:\n.tik https://vt.tiktok.com/ZSB5Dc6YX/");

    const response = await axios.get(`https://delirius-apiofc.vercel.app/download/tiktok?url=${encodeURIComponent(text)}`);
    const json = response.data;

    if (!json.status || !json?.data?.meta?.media?.[0]?.org)
      return m.reply("âŒ *Failed to fetch video. Please try another link.*");

    const videoUrl = json.data.meta.media[0].org;
    const title = json.data.title || "TikTok Video";
    const author = json.data.author?.nickname || json.data.author?.username || "Unknown";
    const caption = `ğŸ¬ *${title}*\nğŸ‘¤ By: ${author}`;

    await m.send(videoUrl, { caption }, "video", m);
  } catch (e) {
    m.error(`${e}\n\nCommand: tik2`, e, false);
  }
});

// FACEBOOK COMMAND
smd({
  cmdname: "fb",
  alias: ["facebook", "fbdl"],
  desc: "Download Facebook videos using API",
  type: "downloader",
  filename: __filename,
},
async (m) => {
  try {
    let text = m.body.split(" ").slice(1).join(" ").trim();
    if (!text && m.quoted?.body) text = m.quoted.body;
    if (!text || !text.includes("facebook.com"))
      return m.reply("*ğŸŒ€ Provide a valid Facebook video URL!*\n\nExample:\n.fb https://www.facebook.com/share/v/17FQTQ8qVw/");

    const apiUrl = `https://apidl.asepharyana.cloud/api/downloader/fbdl?url=${encodeURIComponent(text)}`;
    const response = await axios.get(apiUrl, { timeout: 30000 });
    const json = response.data;

    if (!json.status || !json.data || json.data.length === 0)
      return m.reply("âŒ *Failed to fetch video. Please try another link.*");

    const videoData = json.data.reduce((prev, current) => 
      (parseInt(current.resolution) > parseInt(prev.resolution)) ? current : prev
    );

    const videoUrl = videoData.url;
    const thumbnail = videoData.thumbnail;
    const quality = videoData.resolution;

    const caption = `ğŸ“¹ *Facebook Video*\nğŸ–¼ï¸ Thumbnail: ${thumbnail ? "Sent" : "None"}\nğŸšï¸ Quality: ${quality || "Unknown"}`;
    await m.send(videoUrl, { caption, thumbnail }, "video", m);
  } catch (e) {
    m.error(`${e}\n\nCommand: fb`, e, false);
    await m.reply("âŒ An error occurred while processing your request. Please try again later.");
  }
});

// MEGA.NZ COMMAND
smd({
  cmdname: "mega",
  alias: ["megadl", "megadownload"],
  desc: "Download files from Mega.nz links",
  type: "downloader",
  filename: __filename,
},
async (m) => {
  try {
    let text = m.body.split(" ").slice(1).join(" ").trim();
    if (!text && m.quoted?.body) text = m.quoted.body;

    if (!text || !text.match(/mega(\.nz|\.io)/i))
      return m.reply("*ğŸ“¦ Provide a valid Mega.nz link!*\n\nExample:\n.mega https://mega.nz/file/abc123#xyz456");

    const file = await mega.File.fromURL(text).loadAttributes();
    if (!file) return m.reply("âŒ Failed to access file. Check if link is valid.");

    const fileName = file.name;
    const fileSize = (file.size / (1024 * 1024)).toFixed(2) + ' MB';
    const fileType = file.name.split('.').pop().toUpperCase();

    const downloadStream = file.download();
    const chunks = [];

    downloadStream.on('data', chunk => chunks.push(chunk));

    await new Promise((resolve, reject) => {
      downloadStream.on('end', resolve);
      downloadStream.on('error', reject);
    });

    const fileBuffer = Buffer.concat(chunks);
    const caption = `ğŸ“¦ *Mega Download*\n\nğŸ—‚ï¸ File: ${fileName}\nğŸ“Š Size: ${fileSize}\nğŸ“ Type: ${fileType}`;

    await m.send(
      fileBuffer, 
      { 
        filename: fileName,
        caption: caption,
        mimetype: mime.lookup(fileName) || 'application/octet-stream'
      }, 
      "document", 
      m
    );
  } catch (e) {
    m.error(`${e}\n\nCommand: mega`, e, false);
    await m.reply(`âŒ Error: ${e.message || "Failed to download file"}`);
  }
});
