    const caption = `ğŸ¬ *${title}*\nğŸ‘¤ By: ${author}`;

    await m.send(videoUrl, { caption }, "video", m);
  } catch (e) {
    m.error(`${e}\n\nCommand: tik2`, e, false);
  }
});
//FACEBOOK

smd({
  cmdname: "facebook",
  alias: ["fb", "fbdl"],
  desc: "Download Facebook video using direct link",
  type: "downloader",
  filename: __filename,
},
async (m) => {
  try {
    let text = m.body.split(" ").slice(1).join(" ").trim();

    // Check for reply message if no text
    if (!text && m.quoted?.body) text = m.quoted.body;

    if (!text || (!text.includes("facebook.com") && !text.includes("fb.watch"))) {
      return m.reply("*ğŸ“˜ Provide a valid Facebook video URL!*\n\nExample:\n.fb https://www.facebook.com/share/r/17FQTQ8qVw/");
    }

    const api = `https://apidl.asepharyana.cloud/api/downloader/fbdl?url=${encodeURIComponent(text)}`;
    const res = await axios.get(api);
    const json = res.data;

    if (!json.status || !Array.isArray(json.data) || !json.data[0]?.url) {
      return m.reply("âŒ Failed to fetch Facebook video. Try another link.");
    }

    const videoInfo = json.data[0]; // First available video
    const videoUrl = videoInfo.url;
    const resolution = videoInfo.resolution || "Unknown Quality";
    const thumbnail = videoInfo.thumbnail;

    const caption = `ğŸ¬ *Facebook Video*\nğŸ“¥ Resolution: ${resolution}`;

    await m.send(videoUrl, { caption, thumbnail }, "video", m);

  } catch (e) {
    m.error(`${e}\n\nCommand: fb`, e, false);
  }
});

// MEGA.NZ COMMAND
smd({
  cmdname: "mega",
  alias: ["megadl", "megadownload"],
  desc: "Download files from Mega.nz links",
  type: "downloader",
  filename: __filename,
},
async (m) => {
  try {
    let text = m.body.split(" ").slice(1).join(" ").trim();
    if (!text && m.quoted?.body) text = m.quoted.body;

    if (!text || !text.match(/mega(\.nz|\.io)/i))
      return m.reply("*ğŸ“¦ Provide a valid Mega.nz link!*\n\nExample:\n.mega https://mega.nz/file/abc123#xyz456");

    const file = await mega.File.fromURL(text).loadAttributes();
    if (!file) return m.reply("âŒ Failed to access file. Check if link is valid.");

    const fileName = file.name;
    const fileSize = (file.size / (1024 * 1024)).toFixed(2) + ' MB';
    const fileType = file.name.split('.').pop().toUpperCase();

    const downloadStream = file.download();
    const chunks = [];

    downloadStream.on('data', chunk => chunks.push(chunk));

    await new Promise((resolve, reject) => {
      downloadStream.on('end', resolve);
      downloadStream.on('error', reject);
    });

    const fileBuffer = Buffer.concat(chunks);
    const caption = `ğŸ“¦ *Mega Download*\n\nğŸ—‚ï¸ File: ${fileName}\nğŸ“Š Size: ${fileSize}\nğŸ“ Type: ${fileType}`;

    await m.send(
      fileBuffer, 
      { 
        filename: fileName,
        caption: caption,
        mimetype: mime.lookup(fileName) || 'application/octet-stream'
      }, 
      "document", 
      m
    );
  } catch (e) {
    m.error(`${e}\n\nCommand: mega`, e, false);
    await m.reply(`âŒ Error: ${e.message || "Failed to download file"}`);
  }
});
